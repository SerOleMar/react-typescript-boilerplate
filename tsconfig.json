{
  "compilerOptions": {
    // Emit Configuration
    "noEmit": true,

    "noImplicitAny": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
    },
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
    },
  },
}
